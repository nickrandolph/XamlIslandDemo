<Window x:Class="WPFIslandsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFIslandsDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Simple UWP Button"
                Click="btnSimpleButton_Click"/>
        <Button Content="Custom Control"
                Click="btnCustomControl_Click" />
        <Button Content="Third Party Control"
                Click="btnThirdPartyControl_Click" />
        <Button Content="Third Party Control with Style"
                Click="btnThirdPartyControlWithStyle_Click" />
    </StackPanel>
</Window>
